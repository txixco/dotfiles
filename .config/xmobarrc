                                          "--normal","green","--high","red"] 10
                    , Run Battery ["-t", "<acstatus>: <left>% - <timeleft>",
                                   "--",
                                   --"-c", "charge_full",
                                   "-O", "AC",
                                   "-o", "Bat",
                                   "-h", "green",
                                   "-l", "red"
                                   ] 10
                    , Run Cpu ["-t", "\xf2db <total>%", "-L","3","-H","50",
                               "--normal","green","--high","red"] 10
                    , Run Memory ["-t","\xf233 <usedratio>%"] 10
                    , Run Swap [] 10
                    --, Run Com "uname" ["-s","-r"] "" 36000
