       , commands = [ Run Weather "LEMD" ["-t","<station>: <tempC>C",
                                          "-L","18","-H","25",
                                          "--normal","green",
                                          "--high","red",
                                          "--low","lightblue"] 36000
                    , Run StdinReader
                    , Run Network "wlp4s0" ["-L","0","-H","32",
